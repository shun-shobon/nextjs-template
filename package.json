{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.29.3",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:update": "pnpm test -u",
    "test:ci": "pnpm test --ci",
    "lint": "run-s -c 'lint:*'",
    "lint:eslint": "next lint",
    "lint:prettier": "prettier --check './*.config.js' 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c 'fix:*'",
    "lint-fix:eslint": "pnpm lint:eslint --fix",
    "lint-fix:prettier": "prettier --write './*.config.js' 'src/**/*.{js,jsx,ts,tsx}'",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -o storybook",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^13.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/builder-webpack5": "^6.5.16",
    "@storybook/manager-webpack5": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.7",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "autoprefixer": "^10.4.14",
    "css-loader": "^6.7.3",
    "eslint": "^8.36.0",
    "eslint-config-next": "^13.2.4",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "require-from-string": "^2.0.2",
    "storybook-addon-next": "^1.7.3",
    "style-loader": "^3.3.2",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "webpack": "^5.76.2"
  }
}
