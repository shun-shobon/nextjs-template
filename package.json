{
  "name": "nextjs-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "type": "tsc",
    "lint": "next lint",
    "format": "prettier --write --ignore-path .gitignore \"**/*.{js,ts,jsx,tsx,css}\"",
